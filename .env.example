# ==========================================================================
# CHRONOS Environment Configuration
# ==========================================================================
# Copy this file to .env and update the values
# DO NOT commit .env to version control

# ==========================================================================
# Database Credentials (CHANGE THESE IN PRODUCTION!)
# ==========================================================================
NEO4J_PASSWORD=chronos_secure_password
POSTGRES_PASSWORD=chronos_secure_password  
REDIS_PASSWORD=chronos_secure_password

# ==========================================================================
# Monitoring
# ==========================================================================
GRAFANA_PASSWORD=chronos_secure_password

# ==========================================================================
# Model Configuration
# ==========================================================================
MODEL_PATH=checkpoints/chronos_experiment/best_model.pt
DEVICE=cuda
# Set to 'cpu' if no GPU available

# ==========================================================================
# API Configuration
# ==========================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# ==========================================================================
# Performance Tuning
# ==========================================================================
MAX_INFERENCE_LATENCY_MS=50
CACHE_TTL_SECONDS=3600

# ==========================================================================
# Security (Production)
# ==========================================================================
# Comma-separated list of valid API keys
API_KEYS=chronos-dev-key
# Rate limit requests per minute (per client)
RATE_LIMIT_PER_MINUTE=100

# ==========================================================================
# Logging
# ==========================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR

# ==========================================================================
# Risk Thresholds
# ==========================================================================
RISK_THRESHOLD_LOW=0.4
RISK_THRESHOLD_MEDIUM=0.7
RISK_THRESHOLD_HIGH=0.9

# ==========================================================================
# Compliance
# ==========================================================================
COMPLIANCE_JURISDICTION=US
# Options: US, EU, UK, APAC
SAR_THRESHOLD=10000
CTR_THRESHOLD=10000
